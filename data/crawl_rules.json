{
  "allow": [
    "product pages (canonical)",
    "brand collection pages (limited pagination: 1-3)",
    "sitemaps: /sitemap.xml, /sitemap_index.xml, product sitemaps"
  ],
  "disallow": [
    "/search",
    "facet/filter URLs",
    "sort params",
    "/cart",
    "/checkout",
    "/account",
    "/admin",
    "/policies"
  ],
  "box_only_regex": "(?i)\\b(box|cabinet)\\b|\\bbox of (\\d{1,3})\\b",
  "exclude_pack_regex": "(?i)\\b(sampler|samplers|variety|fresh\\s*pack|tin|5-pack|10-pack|single|bundle)\\b",
  "canonicalize": {
    "strip_query_params": true,
    "strip_utm": true
  }
}