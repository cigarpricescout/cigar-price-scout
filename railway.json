{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "cd app && uvicorn main:app --host 0.0.0.0 --port $PORT"
  },
  "cron": [
    {
      "command": "python automation_runner.py",
      "schedule": "0 15 * * *"
    }
  ]
}